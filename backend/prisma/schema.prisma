// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            BigInt        @id
  token         String        @unique
  access_token  String?
  refresh_token String?
  expiresAt     DateTime?
  avatar        String?
  username      String?
  locale        String?
  email         String?
  history       UserHistory[]
  role          Role          @default(USER)
  createdAt     DateTime      @default(now()) @map("created_at")
}

enum Role {
  USER
  ADMIN
  BLOCK
  PREMIUM
}

model UserHistory {
  id            Int         @id   @default(autoincrement())
  user          User?       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        BigInt?
  endpoint      Endpoint?    @relation(fields: [endpointName], references: [name], onDelete: Cascade)
  endpointName  String?
  responseCode  ResponseCode  @relation(fields: [statusCode], references: [code], onDelete: Cascade)
  statusCode    Int         @default(200)
  responseTime  Int         @default(5)
  createdAt     DateTime    @default(now())
}

model Endpoint {
  name          String    @id
  cooldown      Int       @default(2000)
  maxRequests   Int       @default(5)
  maxRequestper Int       @default(60000)
  isBlocked     Boolean   @default(false)
  isValid       Boolean   @default(false)
  premiumOnly   Boolean   @default(false)
  history       UserHistory[]
}

model ResponseCode {
  code      Int             @id
  history   UserHistory[]
}

model systemHistory {
  id            Int         @id     @default(autoincrement())
  memoryUsage   String
  cpuUsage      Int
  createdAt     DateTime      @default(now()) @map("created_at")
}
